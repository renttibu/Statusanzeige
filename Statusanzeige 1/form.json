{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Info",
      "items": [
        {
          "type": "Label",
          "caption": "Mit dieser Instanz kann ein Status mittels RequestAction angezeigt werden.\nWeitere Informationen entnehmen Sie bitte der Dokumentation.\n"
        },
        {
          "type": "Label",
          "caption": "Instanz ID:"
        },
        {
          "type": "Label",
          "caption": "Modul:"
        },
        {
          "type": "Label",
          "caption": "Version:"
        },
        {
          "type": "Label",
          "caption": "Datum:"
        },
        {
          "type": "Label",
          "caption": "Uhrzeit:"
        },
        {
          "type": "Label",
          "caption": "Entwickler:"
        },
        {
          "type": "Label",
          "caption": "Präfix:"
        },
        {
          "type": "ValidationTextBox",
          "name": "Note",
          "caption": "Notiz",
          "width": "600px"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "CheckBox",
          "name": "MaintenanceMode",
          "caption": "Wartungsmodus"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Funktionen",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie die Funktionen aus, die Sie verwenden wollen:"
        },
        {
          "type": "CheckBox",
          "name": "EnableSignalling",
          "caption": "Anzeige (Aus/An)"
        },
        {
          "type": "CheckBox",
          "name": "EnableNightMode",
          "caption": "Nachtmodus (Aus/An)"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Status",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie die Variablen für den Status (z.B. System-, Alarm-, Tür-, Fenster-, Batterie-, Sabotagestatus) aus:"
        },
        {
          "type": "List",
          "name": "States",
          "rowCount": 5,
          "add": true,
          "delete": true,
          "sort": {
            "column": "ID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Aktiviert",
              "name": "Use",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "caption": "Variable",
              "name": "ID",
              "width": "500px",
              "add": 0,
              "edit": {
                "type": "SelectVariable"
              }
            },
            {
              "caption": "Auslösender Wert",
              "name": "TriggerValue",
              "width": "160px",
              "add": 0,
              "edit": {
                "type": "Select",
                "options": [
                  {
                    "caption": "0 | false",
                    "value": 0
                  },
                  {
                    "caption": "1 | true",
                    "value": 1
                  },
                  {
                    "caption": "2",
                    "value": 2
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Anzeige",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie die Variable für die Anzeige aus:"
        },
        {
          "type": "SelectVariable",
          "name": "Signalling",
          "caption": "Anzeige",
          "width": "600px"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Schaltverzögerung in Millisekunden an:"
        },
        {
          "type": "NumberSpinner",
          "name": "SignallingSwitchingDelay",
          "caption": "Schaltverzögerung",
          "suffix": "ms"
        },
        {
          "type": "Label",
          "caption": "\n\nBitte wählen Sie die Variable für die korrespondierende, invertierte Anzeige aus:"
        },
        {
          "type": "SelectVariable",
          "name": "InvertedSignalling",
          "caption": "Anzeige",
          "width": "600px"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Schaltverzögerung in Millisekunden an:"
        },
        {
          "type": "NumberSpinner",
          "name": "InvertedSignallingSwitchingDelay",
          "caption": "Schaltverzögerung",
          "suffix": "ms"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Nachtmodus",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie aus, ob Sie den automatischen Nachtmodus verwenden wollen:"
        },
        {
          "type": "CheckBox",
          "name": "UseAutomaticNightMode",
          "caption": "Nachtmodus verwenden"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Startzeit für den Nachtmodus an:"
        },
        {
          "type": "SelectTime",
          "name": "NightModeStartTime",
          "caption": "Startzeit"
        },
        {
          "type": "Label",
          "caption": "Bitte geben Sie die Endzeit für den Nachtmodus an:"
        },
        {
          "type": "SelectTime",
          "name": "NightModeEndTime",
          "caption": "Endzeit"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Konfiguration",
      "items": [
        {
          "type": "Button",
          "caption": "Neu einlesen",
          "onClick": "SA1_ReloadConfiguration($id);"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectCategory",
              "name": "BackupCategory",
              "caption": "Kategorie",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "Button",
              "caption": "Sichern",
              "onClick": "SA1_CreateBackup($id, $BackupCategory);"
            }
          ]
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectScript",
              "name": "ConfigurationScript",
              "caption": "Konfiguration",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "PopupButton",
              "caption": "Wiederherstellen",
              "popup": {
                "caption": "Konfiguration wirklich wiederherstellen?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Wiederherstellen",
                    "onClick": "SA1_RestoreConfiguration($id, $ConfigurationScript);"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Registrierte Nachrichten",
      "items": [
        {
          "type": "List",
          "name": "RegisteredMessages",
          "rowCount": 5,
          "sort": {
            "column": "SenderID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Sender ID",
              "name": "SenderID",
              "width": "150px",
              "onClick": "echo $RegisteredMessages['SenderID'];"
            },
            {
              "caption": "Sender Name",
              "name": "SenderName",
              "width": "250px"
            },
            {
              "caption": "Nachrichten ID",
              "name": "MessageID",
              "width": "150px"
            },
            {
              "caption": "Nachrichten Bezeichnung",
              "name": "MessageDescription",
              "width": "260px"
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Testbereich",
      "items": [
        {
          "type": "TestCenter"
        }
      ]
    }
  ],
  "status": [
    {
      "code": 101,
      "icon": "active",
      "caption": "Statusanzeige wird erstellt"
    },
    {
      "code": 102,
      "icon": "active",
      "caption": "Statusanzeige ist aktiv"
    },
    {
      "code": 103,
      "icon": "active",
      "caption": "Statusanzeige wird gelöscht"
    },
    {
      "code": 104,
      "icon": "inactive",
      "caption": "Statusanzeige ist inaktiv"
    },
    {
      "code": 200,
      "icon": "inactive",
      "caption": "Es ist Fehler aufgetreten, weitere Informationen unter Meldungen, im Log oder Debug!"
    }
  ]
}